sudo apt-get install docker.io -y              ( install docker on server )
sudo systemctl start docker                    ( start the docker engine )
sudo systemctl status docker                   ( status of docker deamon )
docker run --name=webapp -d -p 8787:80 nginx   ( localhost:8787 )
docker run --name=webapp -d -P nginx           ( docker will assigned port number if you mention flag -P and the port range should be 0-65565 )
docker run --rm --name=webapp -d nginx
docker image inspect <image name>              ( details and events of docker image )
docker inspect <containerID>                   ( details and events of container ID )
docker logs <containerID>                      ( to view the logs of the container )
sudo usermod -aG docker ubuntu                 ( permission for docker to run the task on unbuntu os )
docker container ls                            ( running containers )
docker container ls -a                         ( hidden and stopped containers )
docker system prune -a                         ( delete all components in docker host )
docker rm -f $( docker ps -aq )                ( delete all docker image with single command )
docker images                                  ( to identify which images are present )
docker rmi <image name>                        ( to delete single image in current list )
docker commit <containerID> <Image name>       ( convert running container to docker iamge )
docker run -- name=mydb -d -p 5757:3306 mysql
docker run -- name=app -d -p 2828:80 --link=mydb wordpress  ( DNS resolution like connection between two different container using flag --link through CLI )
docker exec -it <containerID> /bin/sh          ( went inside to the container )
docker run --name=mydb -d -e MYSQL_ROOT_PASSWORD=test mysql ( passing mysql environmental variables like password while executing the container )    
docker build -t image:v1 .                     ( build the docker image based on docker file )
docker build -f Dockerfileone -t image:v1 .    ( -f flag need to be mention when do you have a different file name other than that "Dockerfile" )
docker run name=test -d test-one sleep 100     ( the given argument is going to be overriden the actual funcionality of the cmd instruction what have mentioned in docker file ex: CMD ["sleep", "1000"] )
docker tag <image name>:<version> <accountID>/<repository name>:<version> ( tag image with docker registery repository before pushing image to docker hub )
docker push <image name>:<version>             ( once tagged then push to docker hub using "push" command )
docker compose pull (or) docker compose -f docker-compose1.yaml pull ( pull the images for each container what have mentioned )
docker compose up -d                           ( create and start the containers )
docker compose stop                            ( stopped the containers and move to exited state )
docker compose start                           ( start the containers )
docker compose restart                         ( restart the containers )
docker compose config                          ( represent the docker compose yaml file details )
docker compose down                            ( stopped and remove the containers in host server )
docker compose logs                            ( show all the container logs )
docker run --name=webapp --mount type=bind, source=/outside, target=/inside -d nginx ( by default its having read write access to docker host volume "/outside" )
docker run --nmae=webapp --mount type=bind, source=/outside, traget=/inside, ro -d nginx ( ro represents read only access to read data from "/outside" volume )
docker volume ls                               ( list of the active volumes )
docker volume create <Volume Name>             ( create volume and stored into /var/lib/docker )
docker run --name=app -v <volume name>:/inside -d nginx ( attach the exist volume while creating the container )
docker run --name=app -v <volume name>:/inside -v <volume name>:/inside -d nginx ( attach multiple volumes at a time )
docker volume inspect <volume name>            ( inspect the volumes )
docker volume prune                            ( clear or delete the available volumes on the docker host )
docker network ls                              ( to list the network present in docker host )
docker network create --driver=bridge <network name> ( to create the custom network )
docker network inspect <network name>          ( to inspect the network )
docker run --name=c1 -d -it --network=test busybox ( to attach custom network while creating the container )
docker compose config                          ( before apply the environment variables file just to confirm which values are passing )
docker compose --env-file=./.env.prod config   ( different environment variables file name ex: .env.prod )
