docker run --name=webapp -d -p 8787:80 nginx   ( localhost:8787 )
docker run --name=webapp -d -P nginx           ( docker will assigned port number if you mention flag -P and the port range should be 0-65565 )
docker run --rm --name=webapp -d nginx
docker image inspect <image name>              ( details and events of docker image )
docker inspect <containerID>                   ( details and events of container ID )
docker logs < containerID >                    ( to view the logs of the container )
sudo usermod -aG docker ubuntu                 ( permission for docker to run the task on unbuntu os )
docker container ls                            ( running containers )
docker container ls -a                         ( hidden and stopped containers )
docker system prune -a                         ( delete all components in docker host )
docker rm -f $( docker ps -aq )                ( delete all docker image with single command )
docker images                                  ( to identify which images are present )
docker rmi <image name>                        ( to delete single image in current list )
docker commit <containerID> <Image name>       ( convert running container to docker iamge )
docker run -- name=mydb -d -p 5757:3306 mysql
docker run -- name=app -d -p 2828:80 --link=mydb wordpress  ( DNS resolution like connection between two different container using flag --link through CLI )
docker exec -it <containerID> /bin/sh          ( went inside to the container )
docker run --name=mydb -d -e MYSQL_ROOT_PASSWORD=test mysql ( passing mysql environmental variables like password while executing the container )    
docker build -t image:v1 .                     ( build the docker image based on docker file )
docker build -f Dockerfileone -t image:v1 .    ( -f flag need to be mention when do you have a different file name other than that "Dockerfile" )
docker run name=test -d test-one sleep 100     ( the given argument is going to be overriden the actual funcionality of the cmd instruction what have mentioned in docker file ex: CMD ["sleep", "1000"] )
