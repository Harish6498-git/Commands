eksctl create cluster -f config.yaml                                           ( create cluster through config yaml file )
eksctl create cluster --name=prod --region=us-east-1 --instance-type=t2.medium ( create cluster through cli by default it will create min 2 worker nodes )
eskctl create cluster --name=prod --region=us-east-1 --without-nodegroup       ( create cluster without worker nodes )
eksctl create nodegroup --cluster=prod --region=us-east-1 --name=ng-1          ( create managed nodes and attach to existing cluster )
eksctl create managednodegroup --cluster=prod --region=us-east-1 --name=ng-2   ( create self-managed nodes and attach to exiting cluter )
eksctl create fargateprofile -f fargate-profile.yaml                           ( create fargate worker nodes and attach to cluster and these worker nodes are managed by "cloud provider" like auto-scaling, OS, etc. )
aws iam create-role --role-name=AmazonEKSFargatePodExecutionRole --assume-role-policy-document file://fargate-trust-policy.json ( creating role for "fargate worker nodes" for communicating to "ECR service" )
aws iam attach-role-policy --role-name=AmazonEKSFargatePodExecutionRole --policy-arn arn:aws:iam::policy/AmazonEKSFargatePodExecutionRole policy ( attach policy for the role )
aws iam get-role --role-name AmazonEKSFargatePodExecutionRole --query "Role.Arn" --output-text ( to list to created (or) existing roles )
.kube.config                                                                   ( cluster updation file for authentication & authorization )
kubectl api-resources                                                          ( to list the name-scoped and non-name-scoped resources on cluster )
kubectl get nodes                                                              ( to list all the worker nodes )
kubect get no -o wide                                                          ( list and details about the nodes )
kubectl describe no <node-name>                                                ( complete details about the worker node )
kubectl logs <node-name>                                                       ( logs of the worker node )
kubectl get pods                                                               ( to list all the pods )
kubectl get po -o wide                                                         ( list and details about the pods )
kubectl describe po <pod-name>                                                 ( complete details and events of the pods )
kubectl logs <pod-name>                                                        ( logs of the pod )
kubectl logs <pod-name> -c <container-name>                                    ( logs of the specific pod if you multiple pods in single workload file )
kubectl delete po <pod-name>                                                   ( delete the specific pod )
kubectl create namespace apps                                                  ( create namespaces in cluster for isolation )
kubectl get po -o wide -n apps                                                 ( to list all the pods under the namespace from "app" )
kubectl get ns                                                                 ( to list all the namespaces )
kubectl run test --image=nginx:latest                                          ( deploy the pod instantly through cli )
kubectl run test --image=nginx:v1 -n apps                                      ( deploy the pod instantly on specific namespace through cli )
k9s                                                                            ( switch to k9s dashboards from cli )
kubectl apply -f file.yaml                                                     ( deploy workloads from file with extenstion yaml (or) yml )
kubectl exec -it <pod-name> -- /bin/sh                                         ( went inside to pod (or) container )
kubectl port-forward pod/<pod-name> 9898:80                                    ( access the ruuning application from external (or) outside of the cluster )
kubectl delete -f file.yaml                                                    ( delete all the pods using file.yaml )
kubectl label pod <pod-name> <key>=<value>                                     ( label the specific pod )
kubectl get rs                                                                 ( to list the replicaset workloads )
kubectl describe rs <rs-name>                                                  ( complete details about the rs workloads )
kubectl scale rs/<rs-name> --replicas=6                                        ( scale-up or increase the pods )
kubectl get deploy                                                             ( to list the deployment workloads )
kubectl describe deploy <deployment-name>                                      ( complete details about the deploy workloads )
kubectl set-image deploy/<depoy-name> <container-name>=<new-image>:<tag>       ( test the new version of image for testing through cli )
kubectl edit deploy <deploy-name>                                              ( edit the deployment workloads from cli )
kubectl rollout status deploy/<deploy-name>                                    ( status of the new release (or) version of the appication )
kubectl rollout history deploy/<deploy-name>                                   ( history (or) previous version of the releases )
kubectl rollout history deploy/<deploy-name> --revision-<revision-num>         ( history of the specific version of the release )
kubectl rollout undo deploy/<deploy-name> --to-revision=<version-number>       ( rollback to previous (or) stable version of the application )
kubectl rollout pause deploy/<deploy-name>                                     ( pause (or) stopped the ongoing releases )
kubectl rollout resume deploy/<deploy-name>                                    ( resume (or) continue the ongoing releases (or) workloads )
kubectl scale depoy/<deploy-name> --replicas=<number>                          ( scale-up the deployment pods through cli )
